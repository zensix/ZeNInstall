<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<table class="table table-striped table-bordered table-condensed sortable">
    <thead>
        <tr>
            <th style="width: 100px;">Nom</th>
			<th style="width: 100px;">Famille</th>
            <th style="width: 300px;">Description</th>
            <th style="width: 40px;"></th>
        </tr>
    </thead>
    <tbody>
        <% @systeminstallscripts.each do |systeminstallscript| %>
        <tr>
            <td valign="top"> 
                <%= link_to systeminstallscript.name, edit_systeminstallscript_path(systeminstallscript), :remote => true %> 
            </td>
			
			<td valign="top"> 
                <%= systeminstallscript.famille.name if systeminstallscript.famille %> 
            </td>
            <td valign="top"> 
                <%= systeminstallscript.description %> 
            </td>
            <td valign="top"> 
                <%= link_to edit_systeminstallscript_path(systeminstallscript), :remote => true, :style=>'height: 14px;', :title=>'Edit' do%> 
                    <i class="icon-edit"></i> 
                <% end %> 
                
                <a style="height: 14px; padding-left: 5px;" title="Delete"
                    data-backdrop="static" data-keyboard="true"
                    href="javascript:;"
                    onclick="show_confirm_modal('<%= systeminstallscript_path(systeminstallscript) %>',
                    'Are you sure you want to delete the systeminstallscript : <%= systeminstallscript.name%>');"> 
                    <i class="icon-remove"></i> 
                </a>
             </td>
        </tr>
        <% end %>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3"> <%= will_paginate @systeminstallscript%> </td>
        </tr>
    </tfoot>
</table>
