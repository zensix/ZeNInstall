<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<table class="table table-striped table-bordered table-condensed sortable">
    <thead>
        <tr>
            <th style="width: 100px;">Nom</th>
			<th style="width: 100px;">Famille</th>
            <th style="width: 300px;">Description</th>
            <th style="width: 40px;"></th>
        </tr>
    </thead>
    <tbody>
        <% @ipxescripts.each do |ipxescript| %>
        <tr>
            <td valign="top"> 
                <%= link_to ipxescript.name, edit_ipxescript_path(ipxescript), :remote => true %> 
            </td>
			<td valign="top"> 
                <%= ipxescript.famille.name if ipxescript.famille %> 
            </td>
            <td valign="top"> 
                <%= ipxescript.description %> 
            </td>
            <td valign="top"> 
                <%= link_to edit_ipxescript_path(ipxescript), :remote => true, :style=>'height: 14px;', :title=>'Edit' do%> 
                    <i class="icon-edit"></i> 
                <% end %> 
                
                <a style="height: 14px; padding-left: 5px;" title="Delete"
                    data-backdrop="static" data-keyboard="true"
                    href="javascript:;"
                    onclick="show_confirm_modal('<%= ipxescript_path(ipxescript) %>',
                    'Are you sure you want to delete the ipxescript : <%= ipxescript.name%>');"> 
                    <i class="icon-remove"></i> 
                </a>
             </td>
        </tr>
        <% end %>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3"> <%= will_paginate @ipxescript%> </td>
        </tr>
    </tfoot>
</table>
