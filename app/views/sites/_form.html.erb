<%= form_for(@site, :remote => true, :html => { :class => "form-horizontal"}) do |f| %>
<% if @site.errors.any? %>
<div class="alert alert-block alert-error">
    <h2>Oops !</h2>
    <ul>
        <% @site.errors.full_messages.each do |msg| %>
        <li>
            <%= msg %>
        </li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="control-group <%= 'error' if @site.errors[:name].present? %>">
    <label for="name" class="control-label">Nom</label>
    <div class="controls">
        <%= f.text_field :name, :class => "input-small", :maxlength => "50" %>
    </div>
</div>
<div class="control-group <%= 'error' if @site.errors[:dnssrv].present? %>">
    <label for="dnssrv" class="control-label">Serveur DNS</label>
    <div class="controls">
        <%= f.text_field :dnssrv, :class => "input-xlarge", :maxlength => "100" %>
    </div>
</div>
<div class="control-group <%= 'error' if @site.errors[:dnsdomain].present? %>">
    <label for="dnsdomain" class="control-label">Domaine DNS</label>
    <div class="controls">
        <%= f.text_field :dnsdomain, :class => "input-xlarge", :maxlength => "100" %>
    </div>
</div>
<div class="control-group <%= 'error' if @site.errors[:netmask].present? %>">
    <label for="netmask" class="control-label">Masque Reseau</label>
    <div class="controls">
        <%= f.text_field :netmask, :class => "input-xlarge", :maxlength => "100" %>
    </div>
</div>
<div class="control-group <%= 'error' if @site.errors[:gateway].present? %>">
    <label for="gateway" class="control-label">Gateway</label>
    <div class="controls">
        <%= f.text_field :gateway, :class => "input-xlarge", :maxlength => "100" %>
    </div>
</div>

<div class="control-group">
    <label for="puppetsrv" class="control-label">Serveur Puppet</label>
    <div class="controls">
        <%= f.text_field :puppetsrv, :class => "input-xlarge", :maxlength => "100" %>
    </div>
</div>

<div class="control-group">
    <label for="proxyurl" class="control-label">Url du Prox</label>
    <div class="controls">
        <%= f.text_field :proxyurl, :class => "input-xlarge", :maxlength => "100" %>
    </div>
</div>
<div class="control-group">
    <label for="ntpsrv" class="control-label">Serveur NTP</label>
    <div class="controls">
        <%= f.text_field :ntpsrv, :class => "input-xlarge", :maxlength => "100" %>
    </div>
</div>
<div class="control-group">
    <label for="description" class="control-label">Description</label>
    <div class="controls">
      <%= f.text_area :description, :rows => 2, :cols => 100, :class => "input-xxlarge" %>
    </div>
</div>
<div class="actions">
    <%= f.submit :class => "btn btn-primary", :value => "Save" %>
    <%= link_to :back, :remote => true, :type => "reset", :class => "btn" do%>
        <i class="icon-chevron-left"></i>Cancel
    <% end %>
</div>
<% end %> 