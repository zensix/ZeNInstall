<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<table class="table table-striped table-bordered table-condensed sortable">
    <thead>
        <tr>
            <th style="width: 200px;">Nom</th>
            <th><%= sortable "name", "Description"%></th>
            <th style="width: 40px;"></th>
        </tr>
    </thead>
    <tbody>
        <% @sites.each do |site| %>
        <tr>
            <td valign="top"> 
                <%= link_to site.name, edit_site_path(site), :remote => true %> 
            </td>
            <td valign="top"> 
                <%= site.description %> 
            </td>
            <td valign="top"> 
                <%= link_to edit_site_path(site), :remote => true, :style=>'height: 14px;', :title=>'Edit' do%> 
                    <i class="icon-edit"></i> 
                <% end %> 
                
                <a style="height: 14px; padding-left: 5px;" title="Delete"
                    data-backdrop="static" data-keyboard="true"
                    href="javascript:;"
                    onclick="show_confirm_modal('<%= site_path(site) %>',
                    'Are you sure you want to delete the site : <%= site.name%>');"> 
                    <i class="icon-remove"></i> 
                </a>
             </td>
        </tr>
        <% end %>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3"> <%= will_paginate @customers%> </td>
        </tr>
    </tfoot>
</table>
