                    </div>

                    <div class="nav-collapse">
                        <ul class="nav">
                            <li class="active">
                                <a href="/">ZeNinstall</a>
                            </li>
                            <li>
                                <%= link_to "Serveurs", servers_url%>
                            </li>
							<li>
                                <%= link_to "Systemes", systems_url%>
                            </li>
							<li>
                                <%= link_to "Logs", logs_url%>
