<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<table class="table table-striped table-bordered table-condensed sortable">
    <thead>
        <tr>
            <th style="width: 100px;">Nom</th>
            <th style="width: 300px;">Description</th>
            <th style="width: 40px;"></th>
        </tr>
    </thead>
    <tbody>
        <% @codemodules.each do |codemodule| %>
        <tr>
            <td valign="top"> 
                <%= link_to codemodule.name, edit_codemodule_path(codemodule), :remote => true %> 
            </td>
            <td valign="top"> 
                <%= codemodule.description %> 
            </td>
            <td valign="top"> 
                <%= link_to edit_codemodule_path(codemodule), :remote => true, :style=>'height: 14px;', :title=>'Edit' do%> 
                    <i class="icon-edit"></i> 
                <% end %> 
                
                <a style="height: 14px; padding-left: 5px;" title="Delete"
                    data-backdrop="static" data-keyboard="true"
                    href="javascript:;"
                    onclick="show_confirm_modal('<%= codemodule_path(codemodule) %>',
                    'Are you sure you want to delete the codemodule : <%= codemodule.name%>');"> 
                    <i class="icon-remove"></i> 
                </a>
             </td>
        </tr>
        <% end %>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3"> <%= will_paginate @codemodule%> </td>
        </tr>
    </tfoot>
</table>
