<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<table class="table table-striped table-bordered table-condensed sortable">
    <thead>
        <tr>
            <th style="width: 100px;">Nom</th>
			<th style="width: 50px;">Architecture</th>
			<th style="width: 50px;">Famille</th>
			<th style="width: 100px;">IPXE</th>
            <th style="width: 300px;">Description</th>
            <th style="width: 40px;"></th>
        </tr>
    </thead>
    <tbody>
        <% @systems.each do |system| %>
        <tr>
            <td valign="top"> 
                <%= link_to system.name, edit_system_path(system), :remote => true %> 
            </td>
			<td valign="top"> 
                <%= system.architecture.name if system.architecture %> 
            </td>
		    <td valign="top"> 
                <%= system.famille.name if system.famille %> 
            </td>
			<td valign="top"> 
			 <%= system.ipxescript.name if system.ipxescript %> 
            </td>
		    <td valign="top"> 
                <%= system.description %> 
            </td>
            <td valign="top"> 
                <%= link_to edit_system_path(system), :remote => true, :style=>'height: 14px;', :title=>'Edit' do%> 
                    <i class="icon-edit"></i> 
                <% end %> 
                
                <a style="height: 14px; padding-left: 5px;" title="Delete"
                    data-backdrop="static" data-keyboard="true"
                    href="javascript:;"
                    onclick="show_confirm_modal('<%= system_path(system) %>',
                    'Are you sure you want to delete the system : <%= system.name%>');"> 
                    <i class="icon-remove"></i> 
                </a>
             </td>
        </tr>
        <% end %>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3"> <%= will_paginate @system%> </td>
        </tr>
    </tfoot>
</table>
